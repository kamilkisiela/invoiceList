@import "../../../styles/imports.styl"

.modal.clearInvoice
  .modal-dialog
    position        relative
  &.center
    .modal-dialog
      height                    650px
      +from-width(2)
        width                     570px

  .modal-header
    .sub-title
      font-size                 14px
      font-color                $color-charcoal-3
      font-weight               $font-weight-regular
      +retina()
        font-weight             $font-weight-light

  .modal-body
    color                       $color-charcoal-2
    font-weight                 $font-weight-regular
    +retina()
      font-weight               $font-weight-light

    .grey-content
      background-color          $color-charcoal-11

      &:after
        content                 ''
        background-image        url('data:image/png;base64,')
        background-repeat       repeat-x
        background-position     left bottom
        height                  5px
        width                   100%
        display                 block

    .step1
      .deal
        padding                   40px


        .box
          width                   200px
          height                  200px
          color                   $color-charcoal-2

          background-color        $color-white
          border                  1px solid $color-charcoal-9
          border-radius           10px

          &.credit
            .icon
              margin-bottom       26px
              svg-container( 24px, 24px, $color-charcoal-4 )
          &.debit
            .icon
              margin-bottom       26px
              svg-container( 27px, 27px, $color-charcoal-4 )


          .amount
            font-size             38px
            margin                10px 0
            font-weight           $font-weight-regular
            +retina()
              font-weight         $font-weight-light

        .arrow
          margin                  0 26px
          .icon
            svg-container( 14px, 22px, $color-charcoal-4 )

      .offer-details
        background-color           $color-white
        padding                   30px 50px 31px 50px

        dl

          dd
            font-size             18px
            margin-bottom         20px
            &:last-child
              margin-bottom       0

    .step2
      .account
        padding                   30px 20px 35px 20px

        label
          margin-bottom           15px

      .init

        padding                   120px 0 100px 0
        color                     $color-charcoal-7

        h3
          color                   $color-charcoal-7

        .icon
          margin-bottom           22px
          svg-container( 34px, 28px, $color-charcoal-9 )

        a
          text-decoration         underline

      .account-fields

        padding                   36px 20px
        background-color          $color-white

        h3
          margin-left             10px

        .well
          margin                  0
          padding-top             0
          padding-bottom          0

          .form-group + .form-group
              margin-left         auto

        .confirmation
          margin-top              18px
          input[type=checkbox]
            margin-right          6px
          label
            font-size             14px

    .step3
      .intro
        padding                   32px 30px
        border-bottom             1px solid $color-charcoal-11
        p
          margin                  0
          font-size               14px


      .accounts
        // overflow                  auto
        // max-height                400px

        .expense
        .liability
          padding                 30px 20px
          border-bottom             1px solid $color-charcoal-11

        .well
          margin                  0
          padding-top             0
          padding-bottom          0

    .step4
      .content
        padding                   20px
        .terms
          font-size               16px
          overflow                auto
          max-height              400px

    .step5
      .content
        padding                   20px
        height                    300px

        .success
          .icon
            margin-bottom           22px
            svg-container( 35px, 35px, $color-charcoal-8 )

        .processing
          h4
            color                     $color-charcoal-5
          .spinner

            width                     50px
            height                    50px
            text-align                center
            font-size                 10px
            margin                    20px 0


          .spinner
            width                     70px
            text-align                center

          .spinner > div
            width                     15px
            height                    15px
            background-color          $color-charcoal-5
            margin-right              5px
            border-radius             100%
            display                   inline-block
            -webkit-animation         sk-bouncedelay 1.4s infinite ease-in-out both
            animation                 sk-bouncedelay 1.4s infinite ease-in-out both

          .spinner .bounce1
            -webkit-animation-delay   -0.32s
            animation-delay           -0.32s

          .spinner .bounce2
            -webkit-animation-delay   -0.16s
            animation-delay           -0.16s

          @-webkit-keyframes sk-bouncedelay
            0%, 80%, 100% { -webkit-transform: scale(0) }
            40% { -webkit-transform: scale(1.0) }

          @keyframes sk-bouncedelay
            0%, 80%, 100% {
              -webkit-transform: scale(0);
              transform: scale(0);
            } 40% {
              -webkit-transform: scale(1.0);
              transform: scale(1.0);
            }


  .modal-footer-row
    .confirmation.has-error label
      color                       $error-color
