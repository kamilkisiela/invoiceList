@import "imports.styl"

// Reset the box-sizing
//
*
  box-sizing border-box
*:before,
*:after
  box-sizing border-box

html, body
  height        100%


body

  // max-width     100%
  // max-height    100%

  // flexbox fix for Safari / iOS
  // display          flex
  // flex-direction   column
  // height           100vh

  [ui-view=header]
    flex-shrink    0
  [ui-view=container]
    flex           1 0 auto
  [ui-view=footer]
    flex-shrink    0
  // End flexbox fix for Safari / iOS

  default-font()

.container
  // cancel bootstrap min-height and height because we do positioning with flexbox
  //
  height                initial
  min-height            initial
  padding               0
  margin-right          auto
  margin-left           auto

  +at(1)
    margin              0
    width               100%
    // padding-left        20px
    // padding-right       20px

    // .well
    //   margin-left: -20px!important
    //   margin-right: -20px!important

  +at(2)
    width               600px


  +at(3)
    width               970px

  +from-width(4)
    width               1170px


// some scaffolding
//
a
  text-decoration       none

dl
dd
  margin                0