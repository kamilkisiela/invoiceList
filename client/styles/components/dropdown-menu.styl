@import "../imports.styl"
// relies on Angular Strap Dropdown http://mgcrea.github.io/angular-strap/#/dropdowns


.menu
  position                relative

  .pp-dropdown
    background-color        transparent
    border                  none

    .avatar
      margin-right          12px

    .account-name
      margin-right          20px
      // text-transform        capitalize
      font-size             14px

    .trigger
      svg.icon
        svg-container( 15px, 15px, $color-charcoal-2 )

    &:focus
      outline               none

  .dropdown-menu
    top                   40px !important
    border                none
    width                 200px
    box-shadow            0px 0px 10px 6px rgba(0,0,0,0.08)
    margin                0
    padding               0
    right                 0
    left                  initial !important

    &:before
      position            inherit
      top                 -6px
      right               9px
      content             ''
      width               0
      height              0
      border-style        solid
      border-width        0 6px 6px 6px
      border-color        transparent transparent #FFF transparent
    li
      border-bottom       1px solid $color-charcoal-9
      color               $color-charcoal-3
      height              40px

      &:last-child
        border-bottom     none

      svg.icon
        svg-container( 16px, 17px, $color-charcoal-3 )
        margin-left       12px
        margin-right      15px

      a
        color             inherit
        display           inline-flex
        font-weight       $font-weight-light
        padding           0
