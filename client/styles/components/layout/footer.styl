@import "../../imports.styl"

// ******************* MIXINS *******************

footer-cta()
  // +to-width(2)
    // margin-bottom       30px
  font-size       16px
  color           $color-charcoal-4
  svg
    svg-container( 30px, 30px, $color-charcoal-3,'' )
    opacity       .75
    margin-right  15px

footer-contact-height()

  padding-top      30px
  padding-bottom   30px

footer-bottom-height()
  padding-top      20px
  padding-bottom   20px
  // +between(1,2)
  //   height        100%
  // +from-width(3)
  //   height        85px

// ******************* SELECTORS *******************

footer

  background-color        $color-white

  .footer-contact
    background            $color-charcoal-12
    border-color          $color-charcoal-9
    border-width          1px
    border-style          solid
    border-left           none
    border-right          none

    footer-contact-height()

    .assistence
      +to-width(2)
        margin-bottom       30px

      h3, p
        color             $color-charcoal-4
      h3
        margin-bottom     5px

    .contact
      .cta
        &.phone
          +from-width(2)
            margin-right      75px
          +at(1)
            margin-bottom     30px
          footer-cta()

        &.email
          footer-cta()

  .footer-bottom
    footer-bottom-height()

    .sponsor
      +at(1)
        > div
          margin-bottom        30px
      +at(2)
        margin-bottom          30px

      .deloitte

        svg
          svg-container( 45px, 53px )

      .telstra

        svg
          svg-container( 45px, 80px )
      .brw

        svg
          svg-container( 45px, 87px )

      .sponsor-divider
        +to-width(2)
          display               none
        width                   1px
        height                  20px
        margin-left             20px
        margin-right            20px
        svg
          svg-container( 30px, 1px, '', $color-charcoal-9 )

    .company-details
      +to-width(2)
        margin-bottom       30px
      font-size                 0.75em
      color                     $color-charcoal-1
      font-weight               $font-weight-light

    .social
      // +to-width(2)
      //   margin-bottom       30px
      svg
        svg-container( 30px, 30px, $color-charcoal-3,'' )
        margin-right          15px

        &:last-child
          margin-right        0
