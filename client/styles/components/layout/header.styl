@import "../../imports.styl"

header

  .header-top
    height                    70px

    .icon
      width                   20px
      height                  20px

      svg
        width                 20px
        height                20px

    .brand-prospa
      width                   80px
      height                  19px

      svg
        width                 80px
        height                19px

    .brand-invoice-now
      width                   101px
      height                  12px

      svg
        width                 101px
        height                12px

    .brand-divider
      width                   1px
      height                  20px
      margin-left             18px
      margin-right            18px
      svg
        width                 1px
        height                20px
        stroke black

  .banner
    height                    170px
    position                  relative
    overflow                  hidden

    /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#202458+0,48aad3+100 */
    /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    background               linear-gradient(135deg, #202458 0%,#48aad3 100%)
    /* IE6-9 fallback on horizontal gradient */
    filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#202458', endColorstr='#48aad3',GradientType=1 )")


    .update-profile
      p
        color                   $color-white
        margin-bottom           18px
      h3
        margin-bottom           8px
        color                   $color-white
      .btn-outline
        color                   $color-white
        border-color            $color-white

    .credit-details
      .title
        color                   $color-white
        font-weight             $font-weight-light
        font-size               16px
        margin-bottom           10px

      .amount
        color                   $color-white
        font-size               38px
        font-weight             $font-weight-light




  .no-banner
    border-top                1px solid $color-charcoal-9




