@import "../../imports.styl"

.pp-select
  position              relative

  button
    height              $form-control-height
    border-radius       5px
    background-color    #fff
    border-width        1px
    border-style        solid
    width               100%
    text-align          left
    padding-left        10px

    &:focus
      outline           none

    .caret
      float             right
      margin-top        8px
      border            none
      background-image  url("data:image/svg+xml;base64,")
      background-size   14px
      vertical-align    initial
      background-repeat no-repeat

      width             16px
      height            9px


  .dropdown-menu
    width               100%
    padding             0

    .active a
      background-color  #f5f5f5
      color             inherit
      &:hover
        background-color #f5f5f5

    li
      border-bottom     1px solid $well-border-color

      a
        height            $form-control-height
        line-height       $form-control-height
        padding           0 10px
        border-radius     0 0 5px 5px


      &:last-child
        border-bottom     none