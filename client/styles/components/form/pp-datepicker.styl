@import "../../imports.styl"

// mixins

  arrow-icon()
    .pp-datepicker-icon

      background-image    url("data:image/svg+xml;base64,")
      background-size     18px
      vertical-align      initial
      display             inline-block
      background-repeat   no-repeat
      width               18px
      height              12px
      &.left
        transform         rotate(90deg)
      &.right
        transform         rotate(-90deg)



// selectors

.pp-datepicker
  // position                      relative

  .datepicker.dropdown-menu
    border-radius                 5px
    width                         320px

    button
      min-width                   initial
      border                      none
      color                       initial
      padding                     0
      height                      42px

    table
      thead
        th
          button.pull-left
            margin-left           10px
            arrow-icon()
          button.pull-right
            margin-right          10px
            arrow-icon()

          button
            // &:hover
            background-color      initial
            border                none
            strong
              text-transform      uppercase !important // overwriting inline
              font-weight         200
              font-size           16px

        th.dow
          border-top              1px solid $well-border-color
          height                  42px

      th,td span
        font-weight               200
      tbody
        tr td button
          border-radius         0

          &.btn-today
            background-color      $prospa-green
            color                 #fff

